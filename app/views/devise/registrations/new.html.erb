<div class="row">
  <div class="col-xs-8 col-sm-6 col-md-6 col-xs-offset-2 col-sm-offset-3 col-md-offset-3">
    <h2 class="omb_authTitle">ログイン</h2>
    <div class="sign_in">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label 'メールアドレス' %><br />
            <%= f.email_field :email, class: 'form-control', autofocus: true %>
          </div>
          <div class="field">
            <%= f.label 'パスワード' %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) , class: 'label_link' %><br />
            <% end -%>
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          </div>
          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "ログイン", class: 'btn btn-primary btn-block' %>
          </div>
      <% end %>
    </div>
    <div class="sign_up">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
